<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<!-- Non pressed states -->
	<item android:state_selected="false" android:state_pressed="false" android:drawable="@drawable/tab_bottom_state_default" />
	<item android:state_selected="true" android:state_pressed="false" android:drawable="@drawable/tab_bottom_state_selected" />
	<!-- Pressed state -->
	<item android:state_selected="false" android:state_pressed="true" android:drawable="@drawable/tab_bottom_state_pressed" />
	<item android:state_selected="true" android:state_pressed="true" android:drawable="@drawable/tab_bottom_state_selected" />
</selector>