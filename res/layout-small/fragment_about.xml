<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="10dp">
        <ImageView
	        android:id="@+id/icon_large"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:contentDescription="@string/icon_large"
	        android:src="@drawable/logo_large"
	        android:layout_alignParentTop="true"
	        android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_below="@id/icon_large"
            android:id="@+id/copyright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:singleLine="true"
            android:scrollHorizontally="true"
            android:layout_centerHorizontal="true"
	        android:layout_marginBottom="10dp"
	        android:text="@string/copyright"
	        style="@android:style/TextAppearance.Small"
	        android:textColor="#888888"/>
        <TextView
            android:layout_below="@id/copyright"
            android:id="@+id/people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:singleLine="true"
            android:scrollHorizontally="true"
            android:layout_centerHorizontal="true"
	        android:layout_marginBottom="5dp"
	        android:text="@string/about_people"
	        style="@android:style/TextAppearance.Large"
	        android:textColor="#666666"/>
        <View
            android:layout_below="@id/people"
            android:id="@+id/top_horizontal_line"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"/>
        <TableLayout
            android:id="@+id/the_people"
            android:layout_below="@id/top_horizontal_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp">
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp">
                <TextView
                    android:textColor="#444444"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:scrollHorizontally="true"
                    android:text="@string/about_people_designer"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:textColor="#5EBDCF"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:scrollHorizontally="true"
                    android:text="@string/about_people_ricky"/>
            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp">
                <TextView
                    android:textColor="#444444"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:scrollHorizontally="true"
                    android:text="@string/about_people_business"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:textColor="#5EBDCF"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:scrollHorizontally="true"
                    android:text="@string/about_people_widiasa"/>
            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#444444"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:scrollHorizontally="true"
                    android:text="@string/about_people_developer"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:textColor="#5EBDCF"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:scrollHorizontally="true"
                    android:text="@string/about_people_tegaralaga"/>
            </TableRow>
        </TableLayout>
        <View
            android:layout_below="@id/the_people"
            android:id="@+id/bottom_horizontal_line"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"/>
    </RelativeLayout>
</RelativeLayout>